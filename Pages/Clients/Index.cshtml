@page
@model ESPW.Pages.Clients.IndexModel
@{
}
<br>
<h2>List of Clients</h2>
<a class= 'btn btn-primary btn-sm' href='/Clients/Create'>New Client</a>
<table class = "table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Number Of Doses</th>
			<th>Time Between Doses</th>
			<th>Mass Of Each Dose</th>
			<th>Created At</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model.listClients)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.name</td>
				<td>@item.doses</td>
				<td>@item.time</td>
				<td>@item.mass</td>
				<td>@item.created_at</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.id">Edit</a>
					<a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>